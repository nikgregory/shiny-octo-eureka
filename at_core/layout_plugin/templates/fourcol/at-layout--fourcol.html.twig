{#
/**
 * @file
 * Adaptivetheme implementation to display a two column Layout Plugin layout.
 *
 * Available variables:
 * - content
#}
{%
set classes = [
  'atl',
  'atl--' ~ content['#layout']['id']|clean_class,
  'clearfix',
]
%}
<div{{ attributes.addClass(classes) }}>

  {% if content.top %}
    <div class="atl__top clearfix">
      {{ content.top }}
    </div>
  {% endif %}

  <div class="atl__lr clearfix">
    {% if content.col_1 %}
      <div class="atl__lc lc-1">
        {{ content.col_1 }}
      </div>
    {% endif %}

    {% if content.col_2 %}
      <div class="atl__lc lc-2">
        {{ content.col_2 }}
      </div>
    {% endif %}

    {% if content.col_3 %}
      <div class="atl__lc lc-3">
        {{ content.col_3 }}
      </div>
    {% endif %}

    {% if content.col_4 %}
      <div class="atl__lc lc-4">
        {{ content.col_4 }}
      </div>
    {% endif %}
  </div>

  {% if content.bottom %}
    <div class="atl__bottom clearfix">
      {{ content.bottom }}
    </div>
  {% endif %}
</div>
